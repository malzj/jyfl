            </script>
            <!-- 公用底部 -->
            <!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
            <!-- 底部结束 -->

             <!-- 公共左边 -->
            <!-- #BeginLibraryItem "/library/page_left.lbi" --><!-- #EndLibraryItem -->
            <!-- 公共左边结束 -->

            <!-- 公共右边 -->
            <!-- #BeginLibraryItem "/library/page_right.lbi" --><!-- #EndLibraryItem -->
            <!-- 公共右边结束 -->
	</body>
</html>
