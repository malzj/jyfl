    <script>
	
		
		var ScenicId = "{$goods.ScenicId}";
		var GoodsId = "{$goods.GoodsId}";	
		var MaxBuy = "{$goods.MaxQuantityEachOrder}";
			
		var addate = 0;
	
    	$("#increment").click(function () {
            var amount = parseInt($("#txtProductCount").val());
            if (amount >= MaxBuy) {
                return;
            }
            var num = amount + 1;
            $("#txtProductCount").val(num);            
			var price=$('.adress div .price1').text();
			var a=parseInt(price);
			var all_price=(parseInt(price)*$("#txtProductCount").val());
			$('.all_price').html(all_price);
				
        });
        //减操作
        $("#decrement").click(function () {
            var amount = parseInt($("#txtProductCount").val());
            var num = amount - 1;
            if (num <= 0) {
                return;
            }
            $("#txtProductCount").val(num);
				var price=$('.adress div .price1').text();
				var all_price=parseInt(price)*$("#txtProductCount").val();
				$('.all_price').html(all_price);
        });
		
		//  加载日历
		function loadPrice(date){
			$.ajax({
				type: "POST",
				url: "huanlegu_goods_show.php?step=price",
				data:'ScenicId='+ScenicId+'&GoodsId='+GoodsId+'&date='+date,
				beforeSend : function(){
					var beforeHtml = "<span style='display:inline-block; margin-left:320px;'><img src='/images/loadSeat2.gif'></span>";
					$('#calendar').html(beforeHtml);
				},
				success: function(info){
					$('#calendar').html(info);
				}
			});
		}
		// 页面打开时，第一次加载
		loadPrice(0);
		
		// 上个月、下个月
		function calendar(e){
			if(e==1){
				addate++;
			}else{
				addate--;
			}
			if(addate == 0){
				loadPrice(0);
				
			}	
			var myDate = new Date();
			var year = myDate.getFullYear();
			var month = myDate.getMonth()+1;
			var day = myDate.getDate();
				month = month+addate;
			var str = year+'-'+month+'-'+day;
			loadPrice(str);
		}
		
		// 时间选择
		
		//$('#td table tr td').click(function(){
		$(document).delegate("#td table tr td", "click", function(){
			$(this).addClass('active').siblings().removeClass('active');
			$(this).addClass('active').parents('tr').siblings().find('td').removeClass('active');
			if(price()){
				ctime();
			}			
		});
		
		function price(){
			var price = $('.active').find('.h-p1').text();	
			if(!isNaN(price)){
				alert('您选择的出行日期不支持，请从新选择！');
				return false;
			}
			$('.price1').html(parseFloat(price));
			var all_price = (parseFloat(price)*$("#txtProductCount").val());
			$('.all_price').html(all_price);
			
			// 
			var dates =  $('.active').attr('date');
			$('#date').val(dates);		
			return true;	
		}
		
		function ctime(){
			var stime =  $('.active').attr('date');			
			$('.stime').text(stime);	
		}
		
		function sub(){			
			var thisDate = new Date();
			$('#f1').submit();
		}
		
		function buquan(num,length){
			var numstr = num.toString();
			var l=numstr.length;
			if (numstr.length>=length) {return numstr;}
			  
			for(var  i = 0 ;i<length - l;i++){
			  numstr = "0" + numstr;  
			 }
			return numstr; 
		}
//			弹层  
		$('#btn-agree').on('click', function(){
