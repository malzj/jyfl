					alert('请输入数字');
					return false;
				}
				if(state == 1){
					numbers = parseInt(number.value) + 1;
				}else if(state == 2){
					numbers = parseInt(number.value);
				}else{
					numbers = parseInt(number.value) - 1;
				}
				if(numbers < 1 || number.value == ''){
					numbers = 1;
				}
				number.value = numbers;
				document.getElementById('updateCartSub').click();
			}
		//-->
		</script>
    </body>
</html>